            <shape android:shape="rectangle">
                <corners android:radius="@dimen/space_xxsmall"/>
                <solid android:color="@color/colorAccentLight"/>
                <padding
                    android:bottom="@dimen/space_xxsmall"
                    android:left="@dimen/space_small"
                    android:right="@dimen/space_small"
                    android:top="@dimen/space_xxsmall"/>
            </shape>
        </item>
    </selector>
</inset>
